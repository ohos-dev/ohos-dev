{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [".vitepress/theme/*"],
      "@@/*": ["*"]
    },
  },
  "include": [
    ".vitepress/theme/**/*.ts",
    ".vitepress/theme/**/*.d.ts",
    ".vitepress/theme/**/*.tsx",
    ".vitepress/theme/**/*.vue",
    "**/*.vue",
    "**/*.ts",
    "vite.config.ts",
  ]
}
